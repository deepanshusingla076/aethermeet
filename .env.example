# Example environment variables for AetherMeet
PORT=5000
MONGO_URI="mongodb://localhost:27017/AetherMeetDB?directConnection=true&serverSelectionTimeoutMS=2000&appName=mongosh+2.5.0"
JWT_SECRET="your_jwt_secret_here"
SESSION_SECRET="your_session_secret_here"

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ROOM_CREATION_LIMIT=5
AUTH_LIMIT=10
MEDIA_UPLOAD_LIMIT=20

# File Upload Configuration
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,audio/mpeg,audio/wav,application/pdf"

# Database Configuration
DB_NAME=AetherMeetDB
DB_HOST=localhost
DB_PORT=27017

# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
CLEANUP_INTERVAL_MINUTES=30
SESSION_EXPIRY_HOURS=2

# Demo Room Configuration
DEMO_ROOM_EXPIRY_MINUTES=60
MAX_DEMO_ROOMS=10
