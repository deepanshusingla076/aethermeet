{
  "name": "aethermeet",
  "version": "1.0.0",
  "description": "Secure & Ephemeral Team Chat Rooms",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:prepare && npm run build:assets && npm run build:verify",
    "build:prepare": "npm ci --production=false",
    "build:assets": "npm run build:css && npm run build:js",
    "build:css": "npx tailwindcss -i ./client/src/styles/index.css -o ./public/css/compiled.css --minify",
    "build:js": "node build-scripts/compile-assets.js",
    "build:verify": "node build-scripts/verify-build.js",
    "prebuild": "npm run clean",
    "postbuild": "npm run build:cleanup",
    "clean": "node build-scripts/clean.js",
    "build:cleanup": "echo \"Build completed successfully\"",
    "build:prod": "NODE_ENV=production npm run build",
    "heroku-postbuild": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "chat",
    "rooms",
    "ephemeral",
    "secure",
    "websockets"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "multer": "^1.4.5-lts.1",
    "node-schedule": "^2.1.1",
    "pdfkit": "^0.17.1",
    "postcss": "^8.4.47",
    "socket.io": "^4.8.1",
    "tailwindcss": "^4.1.13",
    "word-exists": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
